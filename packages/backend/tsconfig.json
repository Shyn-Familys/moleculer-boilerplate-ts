{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2018",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "core/*": ["core/*"],
      "utils/*": ["utils/*"],
      "mixins/*": ["mixins/*"],
      "middlewares/*": ["middlewares/*"],
      "services/*": ["services/*"],
      "errors/*": ["errors/*"],
      "models/*": ["models/*"],
      "tests/*": ["tests/*"],
      "core": ["core/index.ts"],
      "utils": ["utils/index.ts"],
      "mixins": ["mixins/index.ts"],
      "middlewares": ["middlewares/index.ts"],
      "services": ["services/index.ts"],
      "errors": ["errors/index.ts"],
      "models": ["models/index.ts"],
      "tests": ["tests/index.ts"]
    },
    "typeRoots": ["node_modules/@types", "@types"],
    "lib": [
      "es5",
      "es6",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "es2018",
      "esnext.asynciterable"
    ]
  },
  // "include": ["**/*.spec.ts"],
  "exclude": ["**/*.test.ts", "dist/**", "tests/**/*"]
}